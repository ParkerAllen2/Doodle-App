<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ColorPickerActivity"
    android:orientation="vertical"
    android:background="#ffffff">

    <View
        android:id="@+id/colorDisplay"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark">

        <!--Relative layout to hold red -->
        <LinearLayout
            style="@style/SliderInputLayoutStyle"
            android:background="@color/colorPrimary">

            <TextView
                style="@style/LabelStyle"
                android:text="R" />

            <!--seek bar for red -->
            <SeekBar
                android:id="@+id/redSlider"
                style="@style/SliderStyle"
                android:max="255"
                android:progress="10"/>

            <!--value of red -->
            <EditText
                android:id="@+id/redEt"
                style="@style/InputStyle"
                android:text="10"/>

        </LinearLayout>

        <!--Relative layout to hold green -->
        <LinearLayout
            style="@style/SliderInputLayoutStyle"
            android:background="@color/colorPrimary">

            <TextView
                style="@style/LabelStyle"
                android:text="G" />

            <!--seek bar for green -->
            <SeekBar
                android:id="@+id/greenSlider"
                style="@style/SliderStyle"
                android:max="255"
                android:progress="10"/>

            <!--value of green -->
            <EditText
                android:id="@+id/greenEt"
                style="@style/InputStyle"
                android:text="10"/>

        </LinearLayout>

        <!--Relative layout to hold blue -->
        <LinearLayout
            style="@style/SliderInputLayoutStyle"
            android:background="@color/colorPrimary">

            <TextView
                style="@style/LabelStyle"
                android:text="B" />

            <!--seek bar for blue -->
            <SeekBar
                android:id="@+id/blueSlider"
                style="@style/SliderStyle"
                android:max="255"
                android:progress="10"/>

            <!--value of blue -->
            <EditText
                android:id="@+id/blueET"
                style="@style/InputStyle"
                android:text="10"/>

        </LinearLayout>

        <!--Relative layout to hold alpha -->
        <LinearLayout
            style="@style/SliderInputLayoutStyle"
            android:background="@color/colorPrimary">

            <TextView
                style="@style/LabelStyle"
                android:text="A" />

            <!--seek bar for alpha -->
            <SeekBar
                android:id="@+id/alphaSlider"
                style="@style/SliderStyle"
                android:max="255"
                android:progress="10"/>

            <!--value of alpha -->
            <EditText
                android:id="@+id/alphaET"
                style="@style/InputStyle"
                android:text="10"/>

        </LinearLayout>

        <Button
            style="@style/BackButtonStyle"
            android:layout_marginTop="10dp" />

    </LinearLayout>


</LinearLayout>